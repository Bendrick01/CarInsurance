@*'Admin page to display the quotes that have been generated'*@
@model IEnumerable<CarInsurance.Models.Insurees>

<h2>Admin View</h2>

<table class="table">
    <thead>
        <tr>
            @*'Building the table headers'*@
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th>Quote</th>
        </tr>
    </thead>
    <tbody>
        @*'Building the table rows'*@
        @*For each loop to go through each property defined and generates the view*@
        @foreach (var item in Model)
        {
            <tr>
                @*<td> tag to create a cell for data*@
                @*The Model is passing each item individually*@
                @*HTML.DisplayFor method used to display the properties*@
                @*Lambda Expression (modelItem => item.property). This tells the DisplayFor method to display property of the item being returned by the foreach loop *@

                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.EmailAddress)</td>
                <td>@Html.DisplayFor(modelItem => item.Quote)</td>
            </tr>
        }
    </tbody>
        </table>
